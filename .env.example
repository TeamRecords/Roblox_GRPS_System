# === Shared Database Layer (PostgreSQL) ===
DATABASE_URL=postgresql://grps_user:change-me@localhost:5432/grps
DIRECT_URL=postgresql://grps_user:change-me@localhost:5432/grps

# === Roblox Platform Secrets ===
ROBLOX_GROUP_ID=123456
ROBLOX_OPEN_CLOUD_API_KEY=rbx-oc-xxxxxxxxxxxxxxxx
ROBLOX_UNIVERSE_ID=1234567890
ROBLOX_DATASTORE_NAME=GRPS_Points
ROBLOX_DATASTORE_SCOPE=global
ROBLOX_DATASTORE_PREFIX=player:

# === Cloudflare Turnstile ===
TURNSTILE_SITE_KEY=1x0000000000000000000000000000000AA
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA

# === Backend Automation Service (Python FastAPI) ===
ENVIRONMENT=development
PRISMA_DATABASE_URL=postgresql://grps_user:change-me@localhost:5432/grps
AUTOMATION_SIGNATURE_SECRET=replace-with-hex-secret
WEBHOOK_VERIFICATION_KEY=replace-with-hmac-key
API_KEY_HEADER=x-grps-api-key
INBOUND_API_KEYS=grps-ingest-token
ALLOWED_ORIGINS=http://localhost:3000

# === Automation Web Project (Next.js API at https://automation.arcfoundation.net) ===
PORT=3001
GRPS_AUTOMATION_SIGNATURE_SECRET=replace-with-hex-secret
AUTOMATION_BASE_URL=https://automation.arcfoundation.net
NEXT_PUBLIC_AUTOMATION_BASE_URL=https://automation.arcfoundation.net
GRPS_AUTOMATION_BASE_URL=https://automation.arcfoundation.net

# === Public Web Project (Next.js at https://rle.arcfoundation.net) ===
NEXT_PUBLIC_SITE_URL=https://rle.arcfoundation.net
GRPS_SYNC_TOKEN=local-sync-token
GRPS_SYNC_LIMIT=100
NEXT_PUBLIC_GRPS_API=https://automation.arcfoundation.net

# === Optional Integrations ===
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/.../...
SENTRY_DSN=

